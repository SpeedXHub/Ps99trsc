-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PS99_TRADESCAM_UI"
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling -- Prevent covering by game's UI
screenGui.ResetOnSpawn = false -- Keeps GUI visible after respawning
screenGui.DisplayOrder = 999 -- Makes GUI overlay all other UI elements
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 300, 0, 200)
mainFrame.Position = UDim2.new(0.5, -150, 0.5, -100)
mainFrame.BackgroundColor3 = Color3.fromRGB(100, 100, 100) -- Semi-gray
mainFrame.BackgroundTransparency = 0.2 -- Slightly transparent
mainFrame.BorderSizePixel = 0
mainFrame.Active = true -- Allow drag functionality
mainFrame.Draggable = true -- Make it draggable
mainFrame.ZIndex = 10 -- Overlay priority
mainFrame.Parent = screenGui

-- Rounded Corners (Symmetrical)
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 15) -- Rounded corners
corner.Parent = mainFrame

-- Neon Black Outline
local outline = Instance.new("UIStroke")
outline.Thickness = 3
outline.Color = Color3.fromRGB(0, 0, 0) -- Black
outline.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
outline.Parent = mainFrame

-- Title Bar (Draggable section)
local titleBar = Instance.new("TextLabel")
titleBar.Text = "PS99 TRADE SCAM - v6.2 (Private)"
titleBar.Size = UDim2.new(1, 0, 0, 30)
titleBar.BackgroundTransparency = 0.5 -- Slight transparency
titleBar.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
titleBar.TextColor3 = Color3.fromRGB(255, 255, 255) -- White text
titleBar.TextStrokeColor3 = Color3.fromRGB(0, 0, 0) -- Black outline
titleBar.TextStrokeTransparency = 0 -- Fully visible outline
titleBar.Font = Enum.Font.SourceSansBold
titleBar.TextScaled = true
titleBar.ZIndex = 11
titleBar.Parent = mainFrame

